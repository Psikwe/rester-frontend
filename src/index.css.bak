/* @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&display=swap'); */
@import url('https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Charm:wght@400;700&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap');
:root {
  font-family: "Rubik", Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
  line-height: 1.5;
  font-weight: 400;
  
  color-scheme: light dark;
  color: rgba(255, 255, 255, 0.87);
  background-color: #fff;
  --primary: #000 ;
  --secondary: #EEEEEE;
  color: #000;
  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

*, *::before, *::after {
  box-sizing: border-box;
}
* {
  margin: 0;
}
body {
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
}
img, picture, video, canvas, svg {
  display: block;
  max-width: 100%;
}
input, button, textarea, select {
  font: inherit;
}
p, h1, h2, h3, h4, h5, h6 {
  overflow-wrap: break-word;
}
#root, #__next {
  isolation: isolate;
}

a {
  font-weight: 500;
  color: #475569;
  text-decoration: inherit;
}

a:hover{
  color: var(--primary)
}
button{
  color: #000;
  padding: 8px 16px;
  border-radius: 10px;
  cursor: pointer;
  font-weight: 500;
}

input, select{
  background-color: #fff;
  border-radius: 10px;
  padding: 10px;
  color: #000;
  width: 100%;
  
}


/* Utils */
.flex{
  display: flex;
}

.inlineIcon{
  display: inline;
}
.column{
  flex-direction: column;
}

.row{
  flex-direction: row;
  column-gap: 5px;
}
.space-around{
  justify-content: space-around;
}
.outline{
  background-color: transparent;
  border: 2px solid #000;

}
.clear{
  background-color: transparent;
  border: none;

}
.primary{
  background-color: var(--primary);
  color: #fff;
  border: none;
}

.center{
  justify-content: center;
}
.cursive{
  font-family: "Charm";
}

/* General */
footer{
  padding: 2em;
  background-color: #141414;
  
}

footer a{
  color: #fff;
}

.hero{
  background-color: var(--secondary);
  height: 100vh;
  width: 100vw;
}
.hero, .features{
  padding: 2em 4em;
}
.title{
  line-height: 1.5;
  font-size: 3em;
  font-weight: bold;
}
.subtitle{
  font-size: 1.5em;
  line-height: 1.5;
  color: #808ca6;
}

.smallTitle{
  font-size: 2em;
  font-weight: bold;
  line-height: 1.2em;
}
.button-group{
  display: flex;
  flex-direction: row;
  column-gap: 16px;
}
.hero-image-container{
  flex: 1 1 auto;
  width: 100%;

}
.hero-image{
  border-radius: 4px;
}
.hero-text{
  flex: 1 1 auto;
  width: 100%;
  padding: 1em 2em;
  row-gap: 1em;
}
.features{
  column-gap: 3em;
}
.feature{
  padding: 2em;
  align-items: center;
}
.calculators{
  padding: 2em;
  align-items: center;
  width: 100%;
  column-gap: 2em;
}

.calculator{
  row-gap: 10px;
  column-gap: 10px;
  flex: 1;
}
.feature-image{
  flex: 1 1 auto;
  width: 100%;
  border: 2px #000 solid;
  border-radius: 4px;
}
.feature-text{
  flex: 1 1 auto;
  padding: 1em 2em;
  width: 100%;
}
.header-buttons{
  padding: 1em 0;
}
.hero-buttons .button{
  padding: 16px 24px;
  font-weight: 600;
}
.row select{
  width: 100%;
}
.inverse{
  background-color: #000;
  color: #fff;
}
.inputContainer{
  display: flex;
  width: 100%;
}

/* Chrome, Safari, Edge, Opera */
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Firefox */
input[type=number] {
  -moz-appearance: textfield;
}
